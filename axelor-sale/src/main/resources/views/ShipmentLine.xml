<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="shipment-grid" title="Shipment" model="com.axelor.apps.sale.db.ShipmentLine">
    <hilite if="isReturnConfirm" color="red"/>
    <button onClick="save,action-shipment-line-method-open-print-lable" name="printBtn"
      title="Print" icon="fa-print"/>
    <field name="customer"/>
    <field name="trackStatus"/>
    <field name="rate"/>
    <field name="carrierService"/>
    <field name="carrierServiceType"/>
    <field name="trackingNumber"/>
    <field name="shippDate"/>
    <field name="saleOrder"/>
    <field name="isEmailSent"/>
    <field name="isReturnConfirm"/>
  </grid>

  <form name="shipment-form" title="Shipment" model="com.axelor.apps.sale.db.ShipmentLine">
    <panel name="servicePanel">
      <field name="customer"/>
      <field name="trackStatus"/>
      <field name="carrierService"/>
      <field name="carrierServiceType"/>
      <field name="rate"/>
      <field name="shippDate"/>
      <field name="trackingNumber"/>
      <field name="trackingLink"/>
      <field name="lableUrl" colSpan="12" readonly="false">
        <viewer depends="lableUrl"><![CDATA[
		      <div>
		        <span ng-show="record.lableUrl != null" ><a href={{record.lableUrl}} target="_blank">Lable Link</a></span>
		      </div>
		    ]]></viewer>
        <editor colSpan="12" showTitle="false">
          <field name="lableUrl"/>
        </editor>
      </field>
    </panel>

    <panel>
      <button onClick="action-shipment-line-method-send-email,save" name="sendEmail"
        title="Email Send" prompt="Please confirm Email send to Customer."/>
      <button onClick="save,action-shipment-line-method-return-lable,save"
        name="refund Lable" title="Refund Lable" prompt="Are you sure you want to return lable?"/>
      <field name="isEmailSent"/>
      <field name="isReturnConfirm"/>
    </panel>
  </form>

  <action-method name="action-shipment-line-method-open-print-lable">
    <call class="com.axelor.apps.sale.web.PurchaseLableController" method="openPrintingLable"/>
  </action-method>

  <action-method name="action-shipment-line-method-send-email">
    <call class="com.axelor.apps.sale.web.PurchaseLableController" method="sendEmail"/>
  </action-method>

  <action-method name="action-shipment-line-method-return-lable">
    <call class="com.axelor.apps.sale.web.PurchaseLableController" method="returnPurchaseLable"/>
  </action-method>

</object-views>
